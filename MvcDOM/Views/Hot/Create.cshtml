@model MvcDOM.Hot_Water

@{
    ViewBag.Title = "Create";
}
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<script src="~/Scripts/Hot_water.js"></script>
<h2>Create</h2>
 <label >Тариф на гарячу воду</label>
<input type="text" disabled="disabled" value="@ViewBag.tarrif" id="tarrif"/>
<label>Квартира</label>
<input type="text" disabled="disabled" value="@ViewBag.nuber" id="apartament" />
  <div id="benefit" hidden="hidden">@ViewBag.benefit </div>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Hot_Water</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.HW1,"Лічильник1")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HW1)
            @Html.ValidationMessageFor(model => model.HW1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HW0,"Лічильник2")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HW0)
            @Html.ValidationMessageFor(model => model.HW0)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HWT,"Разом за лічильником 1 та 2")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HWT)
            @Html.ValidationMessageFor(model => model.HWT)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HWP,"Попередні показники")
            (@ViewBag.HWT)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HWP)
            @Html.ValidationMessageFor(model => model.HWP)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HWD,"Різниця")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HWD)
            @Html.ValidationMessageFor(model => model.HWD)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sum,"Сума до сплати")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sum)
            @Html.ValidationMessageFor(model => model.Sum)
        </div>

       @* <div class="editor-label">
            @Html.LabelFor(model => model.HomID, "Hom")
        </div>*@
        <div class="editor-field">
            <input type="text"  name="HomID" value="@ViewBag.ID" hidden="hidden" />
           @* @Html.DropDownList("HomID", String.Empty)
            @Html.ValidationMessageFor(model => model.HomID)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Data,"Дата")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Data)
            @Html.ValidationMessageFor(model => model.Data)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
     @Html.ActionLink("Назад до записів", "Index","Records", new {id=ViewBag.ID},null)
</div>

