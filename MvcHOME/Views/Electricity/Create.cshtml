@model MvcHOME.Electricity

@{
    ViewBag.Title ="Create";
    if (ViewBag.benefit)
    {
       <script src="~/Scripts/Electr.js"></script> 
    }else{
    <script src="~/Scripts/ElectroTRUE.js"></script>
      }
}

<h2>Додати показники для квартири № <span class="label label-success">@ViewBag.nuber</span></h2><h6> тарифи:1(<span class="badge"> @ViewBag.TEL1</span>),тариф2(<span class="badge">@ViewBag.TEL2</span>),тариф3(<span class="badge">@ViewBag.TEL3</span>),пільги(<span class="badge"> @ViewBag.benefit </span>)</h6>

@using (Html.BeginForm("Create", "Electricity", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
