            @Html.TextBoxFor(model => model.Privelege, new  { @class="form-control",  @placeholder="Пільга" })
            @Html.ValidationMessageFor(model => model.Privelege)
        </div>
</div>
        <div class="form-group">
            @Html.LabelFor(model => model.Sum,"До сплати", new { @class = "col-md-2 control-label" })
        
        <div class="col-md-2">
            @Html.TextBoxFor(model => model.Sum, new  { @class="form-control",  @placeholder="До сплати" })
            @Html.ValidationMessageFor(model => model.Sum)
        </div>
</div>
