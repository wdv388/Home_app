        </div>
</div>
        <div class="form-group">
            @Html.LabelFor(model => model.GP,"Попередні", new { @class = "col-md-2 control-label" })
        
        <div class="col-md-2">
            @Html.TextBoxFor(model => model.GP, new  { @class="form-control",  @placeholder="Попередні" })
            @Html.ValidationMessageFor(model => model.GP)
        </div>
</div>
        <div class="form-group">
            @Html.LabelFor(model => model.GD,"Спожито", new { @class = "col-md-2 control-label" })
        
        <div class="col-md-2">
            @Html.TextBoxFor(model => model.GD, new  { @class="form-control",  @placeholder="Спожито" })
